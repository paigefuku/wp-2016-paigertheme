#menu {
text-align: right;
position: relative;
top:-110px;
font-size:.95em;
font-family: 'Lato', sans-serif;
z-index: 1000;
}
#navmenu ul {
margin: 0; padding: 0; 
list-style-type: none; 
list-style-image: none;
background-color: #ffffff;



}
        
#navmenu li {
display: inline-block;
padding:0 1em;
}  
        
#navmenu li a {
text-decoration: none;
margin:5px;
color:inherit;
     }    
#navmenu li a:active {
color:#00ad9e;
}
#navmenu li a:hover {
 color:#dc00ff;
font-weight: 800;

}
#navmenu li ul {
text-align: left;
position: absolute;
display: none;
padding: 0; margin: 0;
padding-left: 5px;
background-color: #ffffff;
opacity: .75;
}
        
#navmenu li:hover ul {
display: block;


}
#navmenu li ul li {
display: block;
padding: 0; margin: 0;
position: relative;
left:-10px;
font-size:.75em;
border-bottom: solid 1px black;

}
$navmen li ul li:hover {
opacity: 1.0;


}
    
#navmenu li ul li:last-child {
padding-bottom: 20px;
border-bottom:none;

}
ul .subnavmenuLI li:hover {
padding-left: 5px;
}
        
#flyingpapers {
width:60%;
align-content: center;
padding-bottom: 20px;
float:right;
    
}
#slideshow {
margin:auto;
width: 25%;
}
.rslides {
position: relative;
list-style: none;
overflow: hidden;
width: 100%;
padding: 0;
margin: 0;
background-color: blue;
}

.rslides li {
-webkit-backface-visibility: hidden;
position: absolute;
display: none;
width: 100%;
left: 0;
top: 0;
}

.rslides li:first-child {
position: relative;
display: block;
float: left;
}

.rslides img {
display: block;
height: auto;
float: left;
width: 100%;
border: 0;
}
        
